<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <PreferenceCategory app:title="Vibration effect">

        <SwitchPreferenceCompat
            android:id="@string/vibration_toggle"
            app:key="@string/vibration_toggle"
            app:title="Enable vibration on tap" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Try PRO version">

        <Preference
            android:defaultValue="Default value"
            android:key="@string/pro_version"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Go to PRO version" />
    </PreferenceCategory>

    <PreferenceCategory app:title="Contact">

        <Preference
            android:defaultValue="Default value"
            android:key="edit_text_preference_1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="coraxengineeringsolutions@gmail.com" />
    </PreferenceCategory>

</PreferenceScreen>
